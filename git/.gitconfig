[user]
    name = hongwei
    email = hongwei.ng@adsc.com.sg
[core]
    editor = vim
    autocrlf = input
    safecrlf = true
[credential]
    helper = cache
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    type = cat-file -t
    dump = cat-file -p
[diff]
    tool = vimdiff
[help]
	autocorrect = 1
